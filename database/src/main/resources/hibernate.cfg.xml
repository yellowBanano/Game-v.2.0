<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="dialect">org.hibernate.dialect.MySQL57Dialect</property>
    <property name="connection.url">jdbc:mysql://localhost:3306/web_shop</property>
    <property name="connection.username">root</property>
    <property name="connection.password">root</property>

    <mapping class="entities.User"/>
    <mapping class="entities.Type"/>
    <mapping class="entities.Product"/>
    <mapping class="entities.Image"/>
    <mapping class="entities.Material"/>
    <mapping class="entities.Shop"/>
    <mapping class="entities.Discount"/>
    <mapping class="entities.Order"/>
    <mapping class="entities.Wallet"/>
    <mapping class="entities.Payment"/>
    <mapping class="entities.CreditCard"/>
  </session-factory>
</hibernate-configuration>